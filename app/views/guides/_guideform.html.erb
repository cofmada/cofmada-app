<%= form_with(model: guide) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="row  blue-w px-0 py-2">
    <div class="col-4 small text-end mb-2 mx-0 px-0">
      <%= f.label :guide_name, '番組表名:', class: 'pt-1 my-3 d-block' %>
      <%= f.label :on_air, '放送日:', class: 'pt-1 my-3 d-block' %>
    </div>
    <div class="col-5 offset-col-3 mb-2">
      <%= f.text_field :guide_name, class: 'form-control my-3' %>
      <%= f.date_field :on_air, class: 'form-control my-3' %>
    </div>
    <div class=" text-center mb-2 mt-0">
      <%= f.submit '登録', class: 'b-metal btn my-2' %>
    </div>
  </div>
<% end %>

