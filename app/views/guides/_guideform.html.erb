<%= form_with(model: guide) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="row align-items-center blue-w px-0 py-2 m-0">
    <div class="row col-md-6 col-lg-4 m-0 p-0">
      <div class="col-3 col-md-4 small text-end mb-2 mx-0 px-0">
        <%= f.label :guide_name, '番組表名:', class: 'pt-1 my-2' %>
      </div>
      
      <div class="col-7 small mb-2 mx-0 px-0"> 
        <%= f.text_field :guide_name, class: 'form-control my-2' %>
      </div>  
    </div>
    
    <div class="row col-md-6 col-lg-4 m-0 p-0">
      <div class="col-3 col-md-4 small text-end mb-2 mx-0 px-0">
        <%= f.label :on_air, '放送日:', class: 'pt-1 my-2' %>
      </div>
      
      <div class="col-7 small mb-2 mx-0 px-0"> 
        <%= f.date_field :on_air, class: 'form-control my-2' %>
      </div>  
    </div>
    
    <div class="text-center col-lg-4 mb-2 mx-0 px-0" id="shows">
      <%= f.submit '登録', class: 'b-metal btn py-0' %>
    </div>
    <div class="text-center col-lg-4 mb-2 mx-0 px-0" id="hiddens">
      <%= f.submit '更新', class: 'b-metal btn py-0 mx-2' %>
      <%= link_to '削除', @channel, method: :delete, data: { confirm: 'Chを削除しますか？' }, class: 'd-metal btn py-0 mx-2' %>
    </div>
  </div>
<% end %>

