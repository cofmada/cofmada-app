<%= render 'layouts/tabs' %>

<% if @guides.any? %>
  <div class="row blue-w text-center mx-0 px-2">
    <div class="mini m-0 pb-0 px-0">※名前クリックで【編集】、動画数クリックで【詳細(動画一覧)】へ</div>
    
    <div class="col-1 small border-bottom p-0 m-0"></div>
    
    <div class="col-5 border-bottom m-0 px-0 py-2">番組表名</div>
    
    <div class="col-2 border-bottom m-0 px-0 py-2">動画数</div>
    
    <div class="col-4 border-bottom m-0 px-0 py-2">放送日</div>
    
    <% @guides.each.with_index(1) do |guide,num| %>
    
      <div class="col-1 small border-bottom pt-1 m-0"><%= num %></div>
    
      <div class="col-5 omit border-bottom m-0 px-0 py-1">
        <%= link_to guide.guide_name, edit_guide_path(guide.id) %>
      </div>
      
      <div class="col-2 omit border-bottom m-0 px-0 py-1">
        <% num = guide.videos.count %>
        <%= link_to num, guide_path(guide.id) %>
      </div>
      
      <div class="col-4 omit border-bottom m-0 px-0 py-1">
        <%= l guide.on_air %>
      </div>
    <% end %>
    
    <div class="mt-3 px-2">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
  
<% else %>
  <div class="blue-w text-center m-0 p-2">番組表が登録されていません...</div>
<% end %>
