<%= render 'layouts/tabs' %>
<div class="blue-w">
  <% if @guides.any? %>
    <div class="row m-2">
      <div class="col-6 mini m-0 pb-0">↓名前クリックで詳細表示・編集</div>
        <table class="table text-center align-middle mb-3">
          <thead>
            <tr>
              <th style="width: 40%">番組表名</th>
              <th style="width: 20%">放送日</th>
              <th style="width: 40%">作成日</th>
            </tr>
          </thead>
          <tbody>
            <% @guides.each do |g| %>
              <tr>
                <td><%= link_to g.guide_name, guide_path(g.id) %></td>
                <td><%= l g.on_air %></td>
                <td><%= l g.created_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="my-3 px-2">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  <% end %>
</div>