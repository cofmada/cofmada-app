<%= form_with model: channel do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <%= f.hidden_field :search_key, value: "" %>
  
  <div class="row align-items-center blue-w m-0 p-2">
    <div class="row col-md-4 m-0 p-0">
      <div class="col-3 col-md-4 small text-end mb-2 mx-0 px-0">
        <%= f.label :channel_name, 'Ch名:', class: 'pt-1 my-3 d-block' %>
      </div>
        
      <div class="col-7 col-md-8 mb-2 px-0">
        <%= f.text_field :channel_name, class: 'form-control my-3' %>
      </div>
    </div>
    
    <div class="row col-md-4 m-0 p-0">
      <div class="col-3 col-md-4 small text-end mb-2 mx-0 px-0">
        <%= f.label :channel_url, 'URL:', class: 'pt-1 my-3 d-block' %>
      </div>
      
      <div class="col-7 col-md-8 mb-2 px-0">  
        <%= f.text_field :channel_url, class: 'form-control my-3' %>
      </div>
    </div>
    
    <% if current_page?(new_channel_path) %>
      <div class="text-center col-md-4 mb-2 mx-0 px-0">
        <%= f.submit '登録', class: 'b-metal btn py-0' %>
      </div>
    <% else %>
      <div class="row text-center col-md-4 mb-2 mx-0 px-0">
        <div class="col-sm-3 col-md-1 m-0 p-0"></div>
        <div class="col-sm-3 col-md-5 m-0 p-0"><%= f.submit '更新', class: 'b-metal btn py-0' %></div>
        <div class="col-sm-3 col-md-5 m-0 p-0"><%= link_to '削除', @channel, method: :delete, data: { confirm: 'Chを削除しますか？' }, class: 'd-metal btn py-0' %></div>
        <div class="col-sm-3 col-md-1 m-0 p-0"></div>
      </div>
    <% end %>
  </div>
<% end %>  
