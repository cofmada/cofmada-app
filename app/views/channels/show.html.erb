<% if @channel.videos.any? %>
  <div class="blue-w text-center m-0"><%= @channel.channel_name %>の動画一覧</div>
  
  <%= form_with(model: @channel, method: :delete) do |f| %>  
    <div class="row d-flex align-items-center blue-w mx-0 py-3">
      <div class="text-center mini m-0 pb-2 px-0">※動画をチェックし【チェックを削除】で一括削除できます</div>
    
      <% @videos.each do |v| %>
        <% if v.thumbnail.present? %>
          <img src=<%= v.thumbnail %> alt="" class="col-4 my-2 mx-0 px-0 none">
          
          <div class="col-6 small d-flex align-items-center my-2 mx-0 px-2"><%= v.video_name %></div>
          
          <div class="col-2 d-flex justify-content-center align-items-center my-2 mx-0 px-0">
            <%= f.check_box :video_id, { multiple: true, style: 'transform: scale(2);', id: v.id }, v.id, false %>
          </div>
        <% else %>
          <div class="col-4 text-center my-2 mx-0 px-2"><%= image_tag "/assets/"+v.media+".png", alt: "", class: "thumb" %></div>
          
          <div class="col-6 d-flex align-items-center my-2 px-2"><%= v.video_name %></div>
          
          <div class="col-2 d-flex justify-content-center align-items-center my-2 mx-0 px-0">
            <%= f.check_box :video_id, { multiple: true, style: 'transform: scale(2);', id: v.id }, v.id, false %>
          </div>
        <% end %>
      <% end %>
  
      <div class=" col-6 mt-3 px-2 py-0">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
      
      <div class="col-6 d-flex justify-content-center align-items-center my-2 px-0">
        <%= f.submit 'チェックを削除', data: { confirm: '動画を削除しますか？' }, class: 'd-metal btn py-1 px-2' %>
      </div>
    
      <div class="text-center mt-3">
        <%= link_to '一覧に戻る', channels_path, class: 'btn metal p-2' %>
      </div>
    </div>  
  <% end %>
<% end %>
