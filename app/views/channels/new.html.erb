<%= form_with(model: @channel) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :name, 'チャンネル名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :media, '媒体' %>
        <%= f.select :media, [["Youtube", "Youtube"], ["ニコニコ", "ニコニコ"], ["Mildom", "Mildom"], ["TVその他", "TVその他"]], {}, class: 'form-control' %>
      </div>
    </div>
    
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :on_air, '放送日' %>
        <%= f.date_field :on_air, class: 'form-control' %>
      </div>
    </div>
    
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :begin_at, '開始' %>
        <%= f.time_field :begin_at, class: 'form-control' %>
      </div>
    </div>
    
    <div class="col-sm-2">
      <div class="form-group">
        <%= f.label :close_at, '終了' %>
        <%= f.time_field :close_at, class: 'form-control' %>
      </div>
    <%= f.submit '登録', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
