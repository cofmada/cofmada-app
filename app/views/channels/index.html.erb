<%= render 'layouts/tabs' %>
<div class="blue-w px-0 py-3">
  <% if @channels.any? %>
    <div class="row m-2">
      <div class="col-4 mini m-0 pb-0">↓名前クリックで編集</div>
        <table class="table text-center align-middle mb-3">
          <thead>
            <tr>
              <th style="width: 30%">ｃｈ名</th>
              <th style="width: 25%">媒体</th>
              <th style="width: 15%">開始</th>
              <th style="width: 5%"></th>
              <th style="width: 15%">終了</th>
              <th style="width: 10%"></th>
            </tr>
          </thead>
          <tbody>
            <% @channels.each do |ch| %>
              <tr>
                <td><%= link_to ch.channel_name, edit_channel_path(ch.id) %></td>
                <td><%= ch.media %></td>
                <td><%= l ch.begin_at, format: :short %></td>
                <td>~</td>
                <td><%= l ch.close_at, format: :short %></td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="mt-3 px-2">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  <% end %>
</div>