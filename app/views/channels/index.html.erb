<%= render 'layouts/tabs' %>
<% if @channels.any? %>
  <div class="row m-2">
    <div class="col-4 text-danger text-center m-0 pb-0">↓名前クリックで編集</div>
      <table class="table table-striped text-center mb-3">
        <thead>
          <tr>
          <th style="width: 30%">ｃｈ名</th>
          <th style="width: 20%">媒体</th>
          <th style="width: 15%">開始</th>
          <th style="width: 5%"></th>
          <th style="width: 15%">終了</th>
          <th style="width: 15%"></th>
          </tr>
        </thead>
        <tbody>
          <% @channels.each do |ch| %>
            <tr>
              <td><%= link_to ch.channel_name, edit_channel_path(ch.id) %></td>
              <td><%= ch.media %></td>
              <td><%= l ch.begin_at, format: :short %></td>
              <td>~</td>
              <td><%= l ch.close_at, format: :short %></td>
              <td><%= link_to '削除', channels_path, method: :delete, data: { confirm: '削除しますか？' }, class: 'btn btn-sm btn-secondary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
