<%= render 'layouts/tabs' %>

<% if @channels.any? %>
  <div class="row blue-w text-center mx-0 px-2">
    <div class="mini m-0 pb-0 px-0">※Ch名クリックで【編集】、動画数クリックで【詳細(動画一覧)】へ</div>

    <div class="col-8 border-bottom m-0 px-0 py-2">Ch名</div>

    <div class="col-1 border-bottom p-0 m-0"></div>

    <div class="col-3 border-bottom m-0 px-0 py-2">動画数</div>

    <% @channels.each do |ch| %>
      <div class="row border-bottom align-items-center p-0 m-0">
        <div class="col-1 small p-0 m-0"><%= ch.id %></div>
        
        <div class="col-2 text-center p-0 m-0">
          <% if ch.icon.present? %>
            <img src="<%= ch.icon %>" alt="" class="icon">
          <% else %>
            <div class="icon"></div>
          <% end %>

        </div>
        
        <div class="col-6 text-start omit m-0 p-0">
          <span><%= link_to ch.channel_name, edit_channel_path(ch.id) %></span>
        </div>
        
        <div class="col-3 omit p-0 m-0">
          <% num = ch.videos.count %>
          <%= link_to num, channel_path(ch.id) %>
        </div>
      </div>
    <% end %>
    
    <div class="mt-3 px-2">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
<% else %>
  <div class="blue-w text-center m-0 p-2">Ch情報が登録されていません...</div>
<% end %>
