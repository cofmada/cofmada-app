<%= render 'layouts/tabs' %>
<% if @channels.any? %>
<p>↓名前クリックで編集ページへ</p>
  <table class="table table-striped text-center my-5">
    <thead>
      <tr>
        <th style="width: 30%">ｃｈ名</th>
        <th style="width: 20%">媒体</th>
        <th style="width: 20%">開始</th>
        <th style="width: 10%"></th>
        <th style="width: 20%">終了</th>
      </tr>
    </thead>
    <tbody>
      <% @channels.each do |ch| %>
        <tr>
          <td><%= link_to ch.channel_name, edit_channel_path(ch.id) %></td>
          <td><%= ch.media %></td>
          <td><%= l ch.begin_at, format: :short %></td>
          <td>~</td>
          <td><%= l ch.close_at, format: :short %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
