<div class="text-center">
  <h2>ログイン認証</h2>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session) do |f| %>

      <div class="mb-3">
        <%= f.label :email, 'Emailアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-success w-80' %>
    <% end %>
  </div>
  <p><%= link_to 'ユーザー登録はこちら', signup_path %></p>
</div>
<%= link_to 'TOPに戻る', root_path, class: 'btn btn-success w-80' %>
