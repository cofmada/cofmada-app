<!DOCTYPE html>
<html  lang="ja">
  <head>
    <title>My番組表</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body data-turbolinks="false">
    <header class="m-0 p-0">
      <div class="container-fruid text-center">
        <h1 class="row now align-items-center text-center py-2 m-0">
          <div class="col-3 m-0 p-0"></div>
          <div class="col-6 text-center m-0 p-0">My番組表</div>
          
          <% if logged_in? && current_page?(root_path) %>
            <div class="col-3 text-center m-0 p-0">
              <%= link_to 'ﾛｸﾞｱｳﾄ', logout_path, method: :delete, class: 'micro metal btn px-2 py-0 m-0' %>
            </div>
          <% elsif logged_in? %>
            <div class="col-3 text-center m-0 p-0">
              <%= link_to 'ﾛｸﾞｱｳﾄ', logout_path, method: :delete, class: 'micro metal btn px-2 py-0 m-0' %><br>
              <%= link_to 'TOP', root_path, class: 'micro metal btn px-4 py-0 m-0' %>
            </div>
          <% else %>
            <div class="col-3 m-0 p-0"></div>
          <% end %>
        </h1>  
          
        <%= render 'layouts/clock' %>
        <%= render 'layouts/flash_messages' %>
      </div>
    </header>

    <%= yield %>

  </body>
</html>
