<%= render 'layouts/tabs' %>
<div class="row blue-w px-0 pt-4 m-0">
  <div class="col-5 text-end">
    <%= image_tag @user.avatar.url %><br>
    <div class="ac-p d-metal btn  text-center py-0 px-2 m-0">変更&nbsp;</div>
  </div>
  <div class="col-5 text-start px-3 mx-2">
    <p>ユーザー:&nbsp;<%= @user.name %></p>
    <p>番組表数:&nbsp;<%= @count_guides %></p>
    <p>登録Ch数:&nbsp;<%= @count_channels %></p>
  </div>
</div>
<%= render 'profile_img' %>
<div class="wind text-center p-0 m-0">
  <%= form_with(model: @user) do |f| %>
  <div class="row align-items-baseline px-0 py-2 m-0">
    <div class="col-3 small text-end mx-0 px-1">
      <%= f.label :guide_id, '番組表:' %>
    </div>
    <div class="col-6 mx-0 px-1">
      <%= f.collection_select :guide_id, current_user.guides.all, :id, :guide_name, {}, class: 'form-control' %>
    </div>
    <div class="col-2 d-metal btn py-0">表示</div>
    <% end %>
  </div>
</div>
<div class="blue-w text-center align-middle scroll px-0 py-2 m-0">
  <%= render 'guides/timetable' %>
</div>
