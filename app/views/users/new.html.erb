<div class="blue-w text-center px-0 py-2">ユーザー登録</div>
<%= form_with(model: @user) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="row blue-w px-0">
    <div class="row px-0 m-0 pt-3">
      <div class="col-4 small text-end mb-2 mx-0 px-0">
        <%= f.label :name, 'ユーザー名:', class: 'pt-1 my-3 d-block' %>
        <%= f.label :email, 'Eメール:', class: 'pt-1 my-3 d-block' %>
        <%= f.label :password, 'パスワード:', class: 'pt-1 my-3 d-block' %>
        <%= f.label :password_confirmation, 'パスワード確認:', class: 'pt-1 my-3 d-block' %>
      </div>
      <div class="col-5 offset-col-3 mb-2">
        <%= f.text_field :name, class: 'form-control my-3' %>
        <%= f.email_field :email, class: 'form-control my-3' %>
        <%= f.password_field :password, class: 'form-control my-3' %>
        <%= f.password_field :password_confirmation, class: 'form-control my-3' %>
      </div>
    </div>
    <div class=" text-center mb-2 mt-0">
      <%= f.submit '登録', class: 'b-metal' %>
    </div>
    <div class="text-center my-3">
      <%= link_to 'TOPに戻る', root_path, class: 'metal btn px-2 py-2' %>
    </div>
  <% end %>
</div>
